<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/list_row_layout"
    android:background="@drawable/selector_list_row">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/event_title"
        android:id="@+id/list_row_event_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/start_date"
        android:id="@+id/list_row_start_date"
        android:layout_below="@+id/list_row_event_title"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/start_time"
        android:id="@+id/list_row_start_time"
        android:layout_alignTop="@+id/list_row_start_date"
        android:paddingLeft="100dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_row_attendee"
        android:text="Attendees"
        android:layout_alignTop="@id/list_row_start_time"
        android:paddingLeft="250dp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>